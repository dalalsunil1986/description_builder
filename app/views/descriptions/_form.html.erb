<%= form_for description do |f| %>
  <div class="field">
    <label>No</label>
    <%= f.text_field :no %>
  </div>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Description</label>
    <%= f.text_area :description, rows: 20 %>
  </div>

  <div class="field">
    <label>Repo url</label>
    <%= f.text_field :repo_url %>
  </div> 

  <div class="field">
    <label>Length</label>
    <%= f.text_field :length %>
  </div>

  <div class="field">
    <label>Skill level</label>
    <%= f.text_field :skill_level %>
  </div>
  
  <div class="field">
    <label>What you will learn</label>
    <%= f.text_area :skill_list, rows: 20 %>
  </div>
  
  <div class="field">
    <%= f.submit 'save', class: 'primary' %>
  </div>
<% end %>